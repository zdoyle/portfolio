@model IEnumerable<GuildCars.Models.Queries.UserRequestItem>

@{
    ViewBag.Title = "Users";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12" style="margin-bottom:10px;">
            @Html.ActionLink("Add a New User", "Register", "Account")
        </div>
        <div id="user-table-container" class="col-xs-12">
            <div class="table-responsive">
                <table id="user-table" class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-2">Last Name</th>
                            <th class="col-md-2">First Name</th>
                            <th class="col-md-4">Email</th>
                            <th class="col-md-2">Role</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @user.LastName
                                </td>
                                <td>
                                    @user.FirstName
                                </td>
                                <td>
                                    @user.Email
                                </td>
                                <td>
                                    @user.Role
                                </td>
                                <td>
                                    @Html.ActionLink("edit", "UpdateUser", new { id = user.EmployeeId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
