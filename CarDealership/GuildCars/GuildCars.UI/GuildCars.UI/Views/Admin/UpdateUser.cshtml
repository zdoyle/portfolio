@model GuildCars.UI.Models.ViewModels.UpdateUserVM

@{
    ViewBag.Title = "Update User";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="col-xs-12 col-md-9">
                <div class="form-group">
                    <label for="update-employee-first-name-box" class="col-xs-2 control-label">
                        Employee Name:
                    </label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "update-user-first-name-box", @placeholder = "First Name" })
                        <div class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</div>
                    </div>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @id = "update-user-last-name-box", @placeholder = "Last Name"})
                        <div class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-9">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-xs-2 control-label" })
                    <div class="col-xs-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "update-user-email-box", @placeholder = "Email Address"})
                        <div class="text-danger">@Html.ValidationMessageFor(m => m.Email)</div>
                    </div>
                    <label for="update-user-role-dropdown" class="col-xs-2 control-label">
                        Role:
                    </label>
                    <div class="col-xs-4">
                        @Html.DropDownListFor(m => m.DepartmentId, Model.DepartmentItems, new { @class = "form-control", @id = "update-user-role-dropdown"})
                        <div class="text-danger">@Html.ValidationMessageFor(m => m.DepartmentId)</div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-9">
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-xs-2 control-label" })
                    <div class="col-xs-4">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>

                    @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-xs-2 control-label" })
                    <div class="col-xs-4">
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                        <div class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmNewPassword)</div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12 col-md-9">
                    @Html.LabelFor(m => m.IsDisabled, new { @class = "control-label col-xs-2" })
                    <div class="col-xs-10">
                        <div class="">
                            @if (Model.IsDisabled)
                            {
                                @Html.CheckBoxFor(m => m.IsDisabled, true)
                            }
                            else
                            {
                                @Html.CheckBoxFor(m => m.IsDisabled, false)
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-9">
                <div class="form-group">
                    <div class="col-xs-offset-2 col-xs-4 col-sm-2">
                        @Html.HiddenFor(m => m.EmployeeId)
                        <input type="submit" class="btn btn-default" value="Update User" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>