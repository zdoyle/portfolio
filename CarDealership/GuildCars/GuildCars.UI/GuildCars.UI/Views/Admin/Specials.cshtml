@model GuildCars.UI.Models.ViewModels.SpecialVM

@{
    ViewBag.Title = "Specials";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm("Specials", "Admin", FormMethod.Post, new { @class = "form-horizontal", @id = "contact-form" }))
    {
        <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @id = "add-special-title-box", @placeholder = "Title" })
                    <div class="text-danger">@Html.ValidationMessageFor(m => m.Title)</div>
                </div>
            </div>
            <div class="form-group">
                <div id="add-special-description-container" class="col-xs-12">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "add-special-description-box", @placeholder = "Description", @rows = "10" })
                    <div class="text-danger">@Html.ValidationMessageFor(m => m.Description)</div>
                </div>
            </div>
            <input type="submit" class="btn btn-primary pull-right" value="Add Special" />
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12" style="position:relative;">
        @foreach (var special in Model.Specials)
            {
            <div class="specialListGroupItems">
                <div class="col-md-2 specials-logo-container">
                    <img class="specialsLogo" src=@Url.Content("~/Images/specialsIcon.png") alt="Special Deal" />
                </div>
                <div class="col-md-10 specials-text-container">
                    <h2 class="text-left">@special.Title</h2>
                    <p>@special.Description</p>
                </div>
            </div>
        }
    </div>
</div>