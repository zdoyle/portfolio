@model GuildCars.Models.Tables.AdminTables.Special

@if (User.IsInRole("Admin"))
{
    <div class="row">
        @using (Html.BeginForm("Specials", "Admin", FormMethod.Post, new { @class = "form-horizontal", @id = "contact-form" }))
        {
            <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @id = "add-special-title-box", @placeholder = "Title" })
                        <div class="text-danger">@Html.ValidationMessageFor(m => m.Title)</div>
                    </div>
                </div>
                <div class="form-group">
                    <div id="add-special-description-container" class="col-xs-12">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "add-special-description-box", @placeholder = "Description", @rows = "10" })
                    </div>
                </div>
                <input type="submit" class="btn btn-primary pull-right" value="Add Special" />
            </div>
        }
    </div>
}

