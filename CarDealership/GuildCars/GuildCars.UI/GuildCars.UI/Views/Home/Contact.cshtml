@model GuildCars.UI.Models.ViewModels.ContactVM

@{
    ViewBag.Title = "Contact Us";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div class="row">
    @if (Model.Message == "submitted")
    {
        <div class="col-xs-12 col-sm-6 col-md-4">
            <p>Thank you for contacting us!  Someone will respond to your inquiry with 24 hrs.</p>
        </div>

    }

    else
    {
        using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", @id = "contact-form" }))
        {
            @Html.ValidationSummary()
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="form-group">
                    <div class="col-xs-6">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "contact-first-name", @placeholder = "First Name" })
                    </div>
                    <div class="col-xs-6">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @id = "contact-last-name", @placeholder = "Last Name" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @id = "contact-email", @placeholder = "Email Address" })
                    </div>
                    <div class="col-xs-6">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @type = "tel", @id = "contact-phone", @placeholder = "Phone" })
                    </div>
                </div>
                <div class="form-group">
                    <div id="contact-message-container" class="col-xs-12">
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @id = "contact-message", @placeholder = "Message", @rows = "10" })
                    </div>
                </div>
                <input type="submit" class="btn btn-primary pull-right" />
            </div>
        }
    }


    <div class="col-md-offset-1 col-md-5 col-sm-6 col-xs-12">
        <div class="col-xs-12">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3133.181542313489!2d-85.64175478502855!3d38.25209537967546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88697521354c5997%3A0xfc9a00f16566f894!2s4203+Shelbyville+Rd%2C+St+Matthews%2C+KY+40207!5e0!3m2!1sen!2sus!4v1510720572243"
                    frameborder="0" style="border:0; width:100%;" height="315" allowfullscreen></iframe>
        </div>
        <div class="col-xs-6">
            <address>
                <span id="contact-info-title">Guild Cars</span><br />
                4203 Shelbyville Rd.<br />
                Louisville, KY 40207<br />
            </address>
        </div>
        <div class="col-xs-6">
            <address>
                <br />Sales: 502.555.0100<br />
                Service: 502.555.0101
            </address>
        </div>
    </div>
</div>