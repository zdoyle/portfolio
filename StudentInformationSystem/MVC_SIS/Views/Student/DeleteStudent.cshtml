@model Exercises.Models.Data.Student

@{
    ViewBag.Title = "DeleteStudent";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Delete Student</h3>
                <div class="row">
                    @using (Html.BeginForm())
                    {   <div class="col-xs-12 col-sm-7">
                        @Html.HiddenFor(m => m.StudentId)
                        <p>Are you sure that you wish to delete the student @Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)?</p>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>